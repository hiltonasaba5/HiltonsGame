<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Endless Runner Game</title>
    <style>
        canvas {
            background-color: #f0f0f0;
            display: block;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <canvas id="gameCanvas" width="800" height="400"></canvas>

    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');

        // Player variables
        let player = { x: 50, y: 300, width: 30, height: 30, speed: 5, velocityY: 0 };
        let gravity = 0.5;
        let isJumping = false;

        // Game elements
        let obstacles = [];
        let coins = [];
        let score = 0;

        // Draw the player
        function drawPlayer() {
            ctx.fillStyle = 'blue';
            ctx.fillRect(player.x, player.y, player.width, player.height);
        }

        // Draw obstacles
        function drawObstacles() {
            ctx.fillStyle = 'red';
            obstacles.forEach(obs => {
                ctx.fillRect(obs.x, obs.y, obs.width, obs.height);
            });
        }

        // Draw coins
        function drawCoins() {
            ctx.fillStyle = 'gold';
            coins.forEach(coin => {
                ctx.beginPath();
                ctx.arc(coin.x + coin.radius, coin.y + coin.radius, coin.radius, 0, Math.PI * 2);
                ctx.fill();
            });
        }

        // Update game state
        function update() {
            // Apply gravity
            player.velocityY += gravity;
            player.y += player.velocityY;

            // Check if player is on the ground
            if (player.y + player.height >=            if (player.y + player.height >= canvas.height) {
                player.y = canvas.height - player.height;
                player.velocityY = 0;
                isJumping = false;
            }

            // Move obstacles and coins
            obstacles.forEach(obs => {
                obs.x -= 3; // Move left
                if (obs.x + obs.width < 0) {
                    // Remove off-screen obstacles
                    obstacles.shift();
                }
            });

            coins.forEach(coin => {
                coin.x -= 3; // Move left
                if (coin.x + coin.radius * 2 < 0) {
                    // Remove off-screen coins
                    coins.shift();
                }
            });

            // Collision detection with obstacles
            obstacles.forEach(obs => {
                if (player.x < obs.x + obs.width &&
                    player.x + player.width > obs.x &&
                    player.y < obs.y + obs.height &&
                    player.y + player.height > obs.y) {
                    // Collision detected
                    // You can handle game over here
                    alert('Game Over!');
                    document.location.reload();
                }
            });

            // Collision detection with coins
            coins.forEach((coin, index) => {
                if (player.x < coin.x + coin.radius * 2 &&
                    player.x + player.width > coin.x &&
                    player.y < coin.y + coin.radius * 2 &&
                    player.y + player.height > coin.y) {
                    // Coin collected
                    score += 1;
                    coins.splice(index, 1);
                }
            });

            // Clear canvas and redraw everything
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            drawPlayer();
            drawObstacles();
            drawCoins();

            // Display score
            ctx.fillStyle = 'black';
            ctx.font = '20px Arial';
            ctx.fillText('Score: ' + score, 10, 30);

            requestAnimationFrame(update);
        }

        // Jump function
        function jump() {
            if (!isJumping) {
                player.velocityY = -10;
                isJumping = true;
            }
        }

        // Event listener for key press
        document.addEventListener('keydown', (e) => {
            if (e.code === 'Space') {
                jump();
            }
        });

        // Spawn obstacles and coins periodically
        function spawnObstacle() {
            const width = 20 + Math.random() * 30;
            const height = 20 + Math.random() * 50;
            const x = canvas.width;
            const y = canvas.height - height;
            obstacles.push({ x, y, width, height });
        }

        function spawnCoin() {
            const radius = 10 + Math.random() * 10;
            const x = canvas.width;
            const y = canvas.height - radius * 2 - Math.random() * 100;
            coins.push({ x, y, radius });
        }

        // Periodically spawn obstacles and coins
        setInterval(spawnObstacle, 2000); // Every 2 seconds
        setInterval(spawnCoin, 3000); // Every